{
  "extends": "tsconfig/base.json",
  "include": [ "**/*.ts" ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "jest"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
